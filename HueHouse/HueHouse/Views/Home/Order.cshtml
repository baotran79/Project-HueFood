@model HueHouse.Models.OrderViewModel

@{
    ViewBag.Title = "Order";
}

<div class="container">
    <div class="order-page">
        <h1>Thông Tin Đơn Hàng</h1>

        @if (Model.CartItems == null || !Model.CartItems.Any())
        {
            <p>Đơn hàng của bạn trống.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Hình Ảnh</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Số Lượng</th>
                        <th>Tổng Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td><img src="~/@item.ProductImage" alt="@item.ProductName" class="product-img" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@(string.Format("{0:#,##0} VNĐ", item.TotalAmount))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="cart-summary">
                <h2>Tổng Tiền: @(string.Format("{0:#,##0} VNĐ", Model.TotalAmount))</h2>
            </div>

            <div class="order-actions">
                <a href="@Url.Action("OrderDetails", "Home")" class="btn btn-info">Chi Tiết Đơn Hàng</a>
                <a href="@Url.Action("Payment", "Home")" class="btn btn-success">Thanh Toán</a>
            </div>
        }
    </div>
</div>