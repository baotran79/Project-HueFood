@model HueHouse.Models.Users

@{
    ViewBag.Title = "Thông Tin Cá Nhân";
}

<div class="main">
    <div class="account-page">
        <h1>Thông Tin Cá Nhân</h1>
        <div class="control-form-myaccount">
            <form action="@Url.Action("My_Account", "Home")" method="post">
                @Html.AntiForgeryToken()

                <!-- Hiển thị họ tên người dùng -->
                <label for="fullname">Full Name:</label>
                <input type="text" id="fullname" name="FullName" value="@Model.FullName" readonly>
                <br />

                <!-- Hiển thị tên đăng nhập -->
                <label for="username">Username:</label>
                <input type="text" id="username" name="Username" value="@Model.Username" readonly>

                <!-- Hiển thị và cho phép chỉnh sửa giới tính -->
                <div class="gender-selection">
                    <label for="sex">Sex:</label>
                    <div>
                        <input type="radio" id="male" name="Sex" value="Nam" @(Model.Sex == "Nam" ? "checked" : "")>
                        <label for="male">Male</label>
                    </div>
                    <div>
                        <input type="radio" id="female" name="Sex" value="Nữ" @(Model.Sex == "Nữ" ? "checked" : "")>
                        <label for="female">Female</label>
                    </div>
                </div>

                <!-- Hiển thị và cho phép chỉnh sửa số điện thoại -->
                <label for="phone">Phone Number:</label>
                <input type="tel" id="phone" name="Phone" value="@Model.Phone">
                <br />

                <!-- Hiển thị và cho phép chỉnh sửa địa chỉ -->
                <label for="address">Địa Chỉ:</label>
                <input type="text" id="address" name="Address" value="@Model.Address">
                <br />

                <!-- Hiển thị và cho phép chỉnh sửa email -->
                <label for="email">Email:</label>
                <input type="email" id="email" name="Email" value="@Model.Email">
                <br />

                <!-- Hiển thị và cho phép chỉnh mật khẩu -->
                <label for="password">Password:</label>
                <input type="tel" id="password" name="Password" value="@Model.Password">

                <!-- Hiển thị thông báo cập nhật -->
                <div class="update-notification">
                    @ViewBag.Message
                </div>

                <!-- Nút lưu thay đổi -->
                <button type="submit" class="savechanges-button">Save Changes</button>
            </form>
        </div>
    </div>
</div>
